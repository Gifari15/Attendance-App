<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/float_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginTop="1dp"
        android:id="@+id/card"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#263741"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp">

        <LinearLayout
            android:id="@+id/bgitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- MARGIN LEFT LINEAR ASALNYA TIDAK ADA-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan cuti"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tvmasuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2023/02/11"
                        android:textSize="11dp"
                        android:textColor="@color/white"/>
<!--                    <TextView-->
<!--                        android:id="@+id/tvakhir"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:text="2023/02/10"-->
<!--                        android:textSize="11dp"-->
<!--                        android:textColor="@color/black"/>-->

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvstatusct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terkirim"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>