<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#121b22"
    tools:context=".Absen_keluar">
<!--   #18232B -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="0dp"
        android:paddingBottom="10dp">
<!--        <ImageView-->
<!--            android:layout_width="110dp"-->
<!--            android:layout_height="105dp"-->
<!--            android:background="@drawable/splash"-->
<!--            android:layout_gravity="center"-->
<!--            android:id="@+id/vtax"/>-->
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="510dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="25dp"
        android:id="@+id/btnLogin"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#233440"
        android:layout_gravity="center">
<!--        #1E2C37 #1F2F3A-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow android:layout_height="0dp" android:layout_weight="1">
                <!-- KOLOM PERTAMA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="11dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="0dp"
                        android:clickable="false"
                        android:layout_gravity=""
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#0037FF">
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!-- AKHIR KOLOM PERTAMA #0270F8 #0430D1-->

                <!-- KOLOM KEDUA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:paddingTop="30dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="#2C495E"
                        >
                        <ImageView
                            android:id="@+id/pictureout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="@drawable/image_ic"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/takepicout"
                        android:layout_marginTop="20dp"
                        android:layout_width="210dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#05BD24"
                        android:onClick="captureout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:text="Take Picture"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="210dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#0656F6"
                        android:onClick="uploadout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:text="Upload"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!-- AKHIR KOLOM KEDUA -->

                <!-- KOLOM KETIGA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_weight="0.5"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="11dp"
                        android:layout_height="130dp"
                        app:cardCornerRadius="0dp"
                        android:layout_gravity="right"
                        android:clickable="false"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#EA1717">
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!-- AKHIR KOLOM KETIGA -->
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>